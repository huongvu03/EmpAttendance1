<!DOCTYPE html>
<html lang="en">
<head>
  <title>Employees List</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function confirmDelete(employeeId) {
      const confirmed = confirm("Do you want to delete this employee?");
      if (confirmed) {
        // If confirmed, redirect to delete route
        window.location.href = `/deleteEmp/${employeeId}`;
      }
    }
  </script>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Home</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/">Employees</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/attendance">Attendance</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/leave">Leave</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

<div class="container mt-4">
  <h2 class="mb-4">Employees List</h2>  
  <a class="btn btn-primary mb-3" href="/addEmp">Add New Employee</a>        
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone No</th>
          <th>Job Title</th>
          <th>Department</th>
          <th>Join Date</th>
          <th>Salary</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
          <% employees.forEach(item => { %>
              <tr>
                <td><%= item.name %></td>
                <td><%= item.email %></td>
                <td><%= item.phoneNo %></td>
                <td><%= item.jobTitle %></td>
                <td><%= item.department %></td>
                <td><%= new Date(item.joinDate).toLocaleDateString() %></td>
                <td><%= item.salary.toLocaleString() %></td>
                <td>
                  <a href="/editEmp/<%= item._id %>" class="btn btn-sm btn-warning">Edit</a>
                  <button class="btn btn-sm btn-danger" onclick="confirmDelete('<%= item._id %>')">Delete</button>
                </td>
              </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
</div>

</body>
</html>
