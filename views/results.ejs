<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Search Results</title>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Search Results</h2>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Id</th>
                        <th>Employee ID</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Check-In Time</th>
                        <th>Check-Out Time</th>
                        <th>Work Hours</th>
                        <th>Overtime Hours</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% results.forEach(item => { %>
                        <tr>
                            <td><%= item._id %></td>
                            <td><%= item.employeeId ? item.employeeId._id : 'N/A' %></td>
                            <td><%= item.employeeId.name %></td> <!-- Assuming you might have a name field -->
                            <td><%= new Date(item.date).toLocaleDateString() %></td>
                            <td><%= new Date(item.checkInTime).toLocaleTimeString() %></td>
                            <td><%= new Date(item.checkOutTime).toLocaleTimeString() %></td>
                            <td><%= item.workHours %></td>
                            <td><%= item.overtimeHours %></td>
                            <td><%= item.status %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <a href="/attendance" class="btn btn-secondary mt-3">Back to Search</a>
    </div>
</body>
</html>
